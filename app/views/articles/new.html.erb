<h1>Create a new article</h1>

<% if @article.errors.any? %>
  <h2>The following <%= pluralize(@article.errors.count, 'error') %> prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
<br>
<%= link_to "Back to Articles Page", articles_path %>
