<h2 class="text-center">Title: <%= @article.title %></h2>
<div class="well col-sm-8 col-sm-offset-2">
<% if @article.user %>
 <ul class="listing">
  <div class="row text-center">
    <div class="col-md-4 col-md-offset-4">
      <li>Created by: </li>
      <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
      <li class="articl-title">
        <%= link_to @article.user.username, user_path(@article.user) %>
      </li>
      <li><small><%= pluralize(@article.user.articles.count, 'article') if @article.user.articles %></small></li>
    </div>
  </div>
  </ul>
<% end %>

  <h4 class="text-center description"><strong>Description</strong></h4>
  <hr>
  <p><%= simple_format(@article.description) %></p>
  <div class="article-actions">
    <%= link_to "Edit this Article", edit_article_path(@article), class: "btn btn-primary btn-sm" %>
    <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure to delete this article?"}, class: "btn btn-danger btn-sm" %>
    <%= link_to "View All Articles", articles_path, class: "btn btn-success btn-sm" %>
  </div>
</div>




