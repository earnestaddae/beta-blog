<h1 class="text-center">All Beta Bloggers</h1>
<div class="text-center">
  <%= will_paginate %>
  <ul class="listing">
    <% @users.each do |user| %>
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="articl-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, 'article') if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all their articles?!"} %></li>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= will_paginate %>
  </ul>
</div>

