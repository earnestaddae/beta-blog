<h1 class="text-center">Create a new Category</h1>


<%= render "shared/errors", obj: @category %>

<%= form_for(@category, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
    <%= f.text_field :name, class: "form-control", placeholder: "Category name" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
<div class="col-sm-4 col-sm-offset-4">
  [<%= link_to "Cancel and return to Articles Page", articles_path %>]
</div>
